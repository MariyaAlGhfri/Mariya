import math

def area(n,s):
    area1=((n*(s**2))/(4*(math.tan(math.pi/n))))
    return area1
n=int(input("enter number of side : "))
s=float(input("enter side: "))
print(area(n,s))



#sum all digit for enter user

def sum_digit(n):
    
    sum = 0
    for digit in str(n): 
      sum += int(digit)      
    return sum
   
n =input("enter number: ")
print(sum_digit(n))




